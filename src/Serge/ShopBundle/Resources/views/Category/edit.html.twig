{% extends 'ShopBundle::layout.html.twig' %}
{% block main %}
{% if app.session.hasFlash('notice') %}
    <div id="flashmessage" class="flash-notice alert alert-success">
        {{ app.session.flash('notice') }}
    </div>
{% endif %}
<h1>Category edit</h1>

<form action="{{ path('category_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button class="btn btn-success" type="submit">
            <i class="icon-ok"></i> Submit edit
        </button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a class="btn btn-small btn-primary" href="{{ path('category') }}">
            <i class="icon-chevron-left"></i> Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('category_delete', { 'id': entity.id }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button class="btn btn-danger btn-small" type="submit">
                <i class="icon-trash"></i> Delete
            </button>
        </form>
    </li>
</ul>
{% endblock main %}